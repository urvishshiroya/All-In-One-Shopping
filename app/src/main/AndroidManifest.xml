<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.annoyedpower.allinoneshopping">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Shard.Login"></activity>
        <activity android:name=".Shard.Register" />
        <activity
            android:name=".Shard.SplashScreen"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".category.Category" />
        <activity android:name=".category.Travel" />
        <activity android:name=".category.Grocery" />
        <activity android:name=".category.Food" />
        <activity android:name=".category.Women" />
        <activity android:name=".category.Shopping" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".MainActivity">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>